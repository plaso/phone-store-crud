<div class="mb-3">
  <label for="{{name}}" class="form-label">{{label}}</label>
  <input
    autocomplete="off" step="any"
    type="{{type}}" value="{{value}}" id="{{name}}" name="{{name}}" placeholder="{{placeholder}}" min="{{min}}"
    class="form-control {{#if error}}is-invalid{{/if}}"
  >
  {{#if error}}
    <div class="invalid-feedback">{{error}}</div>
  {{/if}}
</div>